{
  "name": "kubb",
  "version": "1.0.0",
  "private": true,
  "description": "Kubb monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/kubb-project/kubb.git"
  },
  "license": "MIT",
  "author": "Stijn Van Hulle <stijn@stijnvanhulle.be",
  "workspaces": {
    "packages": [
      "packages/**",
      "docs/**",
      "examples/**"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "generate": "turbo run generate",
    "start": "turbo run start",
    "graph": "nx graph ",
    "lint": "eslint packages/**/*.ts",
    "lint-fix": "eslint packages/**/*.ts --quiet --fix",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "pre-commit": "turbo run pre-commit && pnpm run lint-fix",
    "pre-push": "turbo run pre-push",
    "release": "turbo run release",
    "test": "jest --runInBand --passWithNoTests",
    "test:local": "jest --maxWorkers=50%",
    "test:watch": "jest --maxWorkers=25% --watch",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@swc/core": "^1.3.38",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "assert": "^2.0.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.0",
    "eslint": "^8.35.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-formatjs": "^4.9.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-cli": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "nx": "^15.8.5",
    "prettier": "^2.8.4",
    "prettier-eslint": "^15.0.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "turbo": "^1.8.3",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": "^12.17.0 || ^14.13 || >=16.0.0"
  }
}
