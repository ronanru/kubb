{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "es",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "paths": {
      "@kubb/core":["../core/src/index.ts"],
      "@kubb/swagger": ["../swagger/src/index.ts"],
      "@kubb/swagger-ts": ["../swagger-ts/src/index.ts"]
    }
  },
  "include": ["./src/**/*", "src/client.ts"],
  "exclude": [
    "**/node_modules",
    "**/types/**",
    "**/*.test.ts"
  ]
}